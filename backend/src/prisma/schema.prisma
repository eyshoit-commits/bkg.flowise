generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("BKG_FORGE_DATABASE_URL")
  extensions = [pgvector(map: "vector")]
}

model Projects {
  id        String   @id @default(cuid())
  name      String
  summary   String
  createdAt DateTime @default(now())
  files     Files[]
  workflows Workflows[]
}

model Files {
  id        String   @id @default(cuid())
  project   Projects @relation(fields: [projectId], references: [id])
  projectId String
  path      String
  content   String
  createdAt DateTime @default(now())
}

model AgentLogs {
  id        String   @id @default(cuid())
  agent     String
  payload   Json
  result    Json
  createdAt DateTime @default(now())
}

model Workflows {
  id        String   @id @default(cuid())
  project   Projects @relation(fields: [projectId], references: [id])
  projectId String
  name      String
  flowiseId String
  createdAt DateTime @default(now())
}

model RagDocument {
  id        String   @id
  content   String
  embedding Vector
  createdAt DateTime @default(now())
}

model RagQuery {
  id        String   @id @default(cuid())
  query     String
  response  String
  createdAt DateTime @default(now())
}

model EmbeddingMetadata {
  id    String @id
  meta  Json
}
