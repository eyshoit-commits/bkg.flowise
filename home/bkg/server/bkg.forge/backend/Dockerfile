FROM node:20-alpine AS build
WORKDIR /app
COPY package.json tsconfig.json .
COPY src ./src
RUN npm install --omit=dev=false && npm run build

FROM node:20-alpine
WORKDIR /app
COPY package.json .
RUN npm install --omit=dev
COPY --from=build /app/dist ./dist
ENV PORT=7845
EXPOSE 7845
CMD ["node", "dist/server.js"]
